FROM debian:8.11-slim
ENV LANG C.UTF-8
ENV PATH /root/.rbenv/shims:$PATH
RUN mkdir -p /usr/share/man/man1

RUN sed -i -e "$ a deb http://www.deb-multimedia.org jessie main non-free\ndeb-src http://www.deb-multimedia.org jessie main non-free\ndeb http://httpredir.debian.org/debian/jessie-backports main" /etc/apt/sources.list
RUN apt-get update && apt-get install deb-multimedia-keyring
RUN apt-get update && apt-get install ffmpeg

RUN apt-get update -qq && apt-get install -y \
    curl \
    git \
    build-essential \
    zlib1g-dev \
    default-jre \
    default-libmysqlclient-dev \
    libsqlite3-dev \
    mecab \
    mecab-ipadic-utf8 \
    lsof \
    wget \
    fonts-indic \
    fonts-noto \
    fonts-noto-cjk \
    bzip2 \
    libssl-dev \
    libreadline-dev \
    gcc \
    make \
    tar

RUN wget -O /tmp/ruby2.5.7.tar.gz https://cache.ruby-lang.org/pub/ruby/2.5/ruby-2.5.7.tar.gz
RUN tar -xvzf /tmp/ruby2.5.7.tar.gz -C /tmp/

RUN git clone https://github.com/rbenv/rbenv.git ~/.rbenv
RUN echo 'export PATH="$HOME/.rbenv/bin:$PATH"' >> ~/.bashrc
RUN echo 'eval "$(rbenv init -)"' >> ~/.bashrc
RUN git clone https://github.com/rbenv/ruby-build.git ~/.rbenv/plugins/ruby-build
RUN /root/.rbenv/bin/rbenv install 2.5.8
RUN /root/.rbenv/bin/rbenv global 2.5.8

RUN sh -c 'echo "deb http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list'
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add -
RUN apt-get update -qq && apt-get install -y google-chrome-stable

## webpack
RUN curl -sL https://deb.nodesource.com/setup_10.x | bash -
RUN apt-get install -y nodejs
RUN curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | apt-key add -
RUN echo "deb https://dl.yarnpkg.com/debian/ stable main" | tee /etc/apt/sources.list.d/yarn.list
RUN apt-get update && apt-get install yarn

ENV MECAB_PATH /usr/lib/x86_64-linux-gnu/libmecab.so.2

ENV imagesearch_root /home/imagesearch
RUN mkdir ${imagesearch_root}

RUN /root/.rbenv/shims/gem install bundler