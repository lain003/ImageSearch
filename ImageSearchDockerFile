FROM ruby:2.5.5-slim-stretch
ENV LANG C.UTF-8
ENV PATH /bundle/bin:$PATH
ENV BUNDLER_VERSION 2.0.2
RUN mkdir -p /usr/share/man/man1

RUN apt-get update -qq && apt-get install -y \
    curl \
    git \
    build-essential \
    zlib1g-dev \
    default-jre \
    default-libmysqlclient-dev \
    libsqlite3-dev \
    mecab \
    mecab-ipadic-utf8 \
    lsof \
    ffmpeg \
    wget \
    fonts-indic \
    fonts-noto \
    fonts-noto-cjk

RUN sh -c 'echo "deb http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list'
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add -
RUN apt-get update -qq && apt-get install -y google-chrome-stable

## webpack
RUN curl -sL https://deb.nodesource.com/setup_10.x | bash -
RUN apt-get install -y nodejs
RUN curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | apt-key add -
RUN echo "deb https://dl.yarnpkg.com/debian/ stable main" | tee /etc/apt/sources.list.d/yarn.list
RUN apt-get update && apt-get install yarn

ENV MECAB_PATH /usr/lib/x86_64-linux-gnu/libmecab.so.2

ENV imagesearch_root /home/imagesearch
RUN mkdir ${imagesearch_root}

RUN gem install bundler