<div class="container-fluid">
  <div class="row">
    <div class="mx-auto col-md-6">
      <ul class="share_buttons">
        <li>
          <a href="https://twitter.com/share?text=&url=<%= url_for(only_path: false) %>" data-size="large" class="twitter-share-button" data-show-count="false">
            <%= image_tag 'twitter.png' %>
          </a>
        </li>
        <li>
          <button type="button" class="btn btn-primary" onClick="urlCopy('<%= url_for(only_path: false) %>')">URLをコピー</button>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-6">
      <%= image_tag(@meta_frame.gif_url, :class => "img-fluid", :alt => "Responsive image") %>
    </div>
  </div>
  <div class="row mt-3 justify-content-md-center">
    <div class="col col-md-2">
      <button onclick="window.location.href='<%= meta_frame_path(@meta_frame) %>'" class="btn btn-primary">画像で見る</button>
    </div>
    <div class="col col-md-2">
      <button onclick="window.location.href='<%= edited_gif_new_path(@meta_frame) %>'" class="btn btn-primary">GIFの範囲を指定する</button>
    </div>
  </div>
</div>